---
const navLinks = [
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog' },
  { name: 'Services', url: '/services' },
  { name: 'Contact', url: '/contact' },
];
---

<div class="bg-gray-900 px-5 py-2 flex justify-between">
    <div>
        <h1 class="text-2xl font-bold text-emerald-600"><a href='../pages/index.astro'>JobNow</a></h1>
    </div>
    <div class="text-end ">
        <ul class='flex'>
            { 
                navLinks.map((page)=> {
                    return (
                        <li class='px-2 text-gray-200 hover:text-cyan-500 transition font-bold'><a href={page.url}>{page.name}</a></li>
                    )
                })
            }
        </ul>
    </div>
</div>